<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeuPerfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/linear"
        android:background="#D0E4CD">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewPerfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fotoperfil"
            app:shapeAppearanceOverlay="@style/RoundedShapeAppearance" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/textNomeUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fulano de Tal da Silva"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_inicio"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_below="@id/linear"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/meuperfil_item"
        android:layout_height="match_parent"/>

</RelativeLayout>