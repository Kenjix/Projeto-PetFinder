<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Login"
    android:background="#D0E4CD">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:shapeAppearanceOverlay="@style/RoundedShapeAppearance"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet Finder"
        android:textStyle="bold"
        android:fontFamily="@font/inspiration_regular"
        android:textSize="55sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/editUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="E-mail ou UsuÃ¡rio"
        android:backgroundTint="@color/black"
        android:padding="16dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"/>

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Senha"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="25dp"
        android:padding="16dp"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/erroLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#EDFF0000"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:textColor="@color/white"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:backgroundTint="#4C5C43"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Esqueceu sua senha?"
        android:padding="7dp"
        android:textColor="#0000FF"
        android:layout_marginTop="50dp"
        android:onClick="ResetSenhaClick"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Registre-se"
        android:padding="7dp"
        android:textColor="#0000FF"
        android:onClick="CadastroClick"/>
</LinearLayout>